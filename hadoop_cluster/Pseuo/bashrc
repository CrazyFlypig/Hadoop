#java environment
export JAVA_HOME=/usr/local/java/jdk1.7
export JRE_HOME=/usr/local/java/jdk1.7/jre
#maven environment
export M2_HOME=/usr/local/maven-3.2.3
export PATH=$M2_HOME/bin:$PATH
#kafka environment
export KAFKA_HOME=/usr/local/kafka-0.8.1.1
export PATH=$KAFKA_HOME/bin:$PATH
export CLASSPATH=.:$JAVA_HOME/lib:$JAVA_HOME/jre/lib:$CLASSPATH
export PATH=$JAVA_HOME/bin:$JAVA_HOME/jre/bin:$PATH
#hadoop environment
export HADOOP_HOME=/usr/local/hadoop
export HADOOP_COMMON_LIB_NATIVE_DIR=$HADOOP_HOME/lib/native
export ZOOKEEPER_HOME=/usr/local/hadoop/zookeeper
export PATH=$PATH:$ZOOKEEPER_HOME/bin:$ZOOKEEPER_HOME/conf
export HBASE_HOME=/usr/local/hadoop/hbase
export PATH=$HBASE_HOME/bin:$PATH
export HIVE_HOME=/usr/local/hadoop/hive
export PATH=$HIVE_HOME/bin:$PATH
export PATH=$PATH:/usr/local/hadoop/sbin:/usr/local/hadoop/bin
